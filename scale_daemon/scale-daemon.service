[Unit]
Description=Scale Daemon Container
Documentation=https://github.com/donadiosolutions/scale-printer-mqtt
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%t/containers

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
EnvironmentFile=-/etc/sysconfig/scale-daemon
Restart=on-failure
RestartSec=5
TimeoutStopSec=70
ExecStartPre=/bin/rm -f %t/%n.ctr-id
ExecStart=/usr/bin/podman run \
    --cidfile=%t/%n.ctr-id \
    --cgroups=no-conmon \
    --rm \
    --sdnotify=conmon \
    --replace \
    --name=scale-daemon \
    --detach \
    --env-file=/etc/sysconfig/scale-daemon \
    --device=/dev/ttyUSB_SCALE:/dev/ttyUSB_SCALE:rw \
    --security-opt label=type:container_runtime_t \
    --security-opt label=level:s0 \
    --user=1000:1000 \
    --log-driver=journald \
    ghcr.io/donadiosolutions/scale-daemon:latest
ExecStop=/usr/bin/podman stop --ignore --cidfile=%t/%n.ctr-id
ExecStopPost=/usr/bin/podman rm -f --ignore --cidfile=%t/%n.ctr-id
Type=notify
NotifyAccess=all

[Install]
WantedBy=multi-user.target
